<h2>
  Conversation with
  <%= @conversation.other_user(current_user).email %>
</h2>

<%= turbo_stream_from @conversation %>
<div id="messages">
  <%= render @messages %>
</div>


<%= form_with model: Message.new, url: messages_path do |f| %>
  <%= f.hidden_field :conversation_id, value: @conversation.id %>
  <%= f.text_area :text %>

  <%= f.submit "Send" %>
<% end %>
